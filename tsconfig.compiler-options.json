{
  "compilerOptions": {
    // Path resolution
    "baseUrl": "./src",
    "moduleResolution": "bundler",
    // We only use tsc for type checking
    "declaration": true,
    "noEmit": true,
    // Build settings
    "module": "ESNext",
    "target": "ESNext",
    "composite": true,
    // Features
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // Strictness / Correctness
    "strict": true
  }
}
